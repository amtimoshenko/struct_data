    const int sizes[] = {5, 500, 5000};
    const int numArrays = 3;

    cout << "Анализ временной сложности поиска минимального элемента\n";
    cout << "Минимальный элемент всегда стоит последним в массиве\n\n";

    for (int idx = 0; idx < numArrays; ++idx) {
        int n = sizes[idx];

        vector<int> arr(n);

        // Заполняем массив: все элементы = n, последний = 1 (минимальный)
        for (int i = 0; i < n - 1; ++i) {
            arr[i] = n;  
        }
